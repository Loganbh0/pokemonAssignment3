<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Pokemon Database</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(145deg, #bae2ff, #005ea2);
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            color: #2c3e50;
        }

        .container {
            padding-top: 3rem;
            padding-bottom: 3rem;
        }

        .pokedex-frame {
            max-width: 900px;
            margin: 0 auto;
            border: 6px solid #333;
            border-radius: 20px;
            background: linear-gradient(180deg, #d32f2f 0%, #b71c1c 100%);
            box-shadow: inset 0 0 15px rgba(255, 255, 255, 0.2), 0 5px 25px rgba(0, 0, 0, 0.3);
            padding: 1.2rem;
        }

        .screen {
            background-color: #f4f4f4;
            border: 3px solid #333;
            border-radius: 15px;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 1.2rem;
        }

        h1 {
            font-weight: 700;
            color: #222;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .led {
            width: 15px;
            height: 15px;
            border-radius: 50%;
            margin: 0 5px;
        }

        .led.red {
            background: #ff3b30;
            box-shadow: 0 0 10px #ff3b30;
        }

        .led.yellow {
            background: #ffcc00;
            box-shadow: 0 0 10px #ffcc00;
        }

        .led.green {
            background: #4cd964;
            box-shadow: 0 0 10px #4cd964;
        }

        table {
            border-collapse: separate;
            border-spacing: 0 0.5rem;
        }

        .table thead th {
            background-color: #333 !important;
            color: #fff !important;
            text-align: center;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        td {
            background-color: #fafafa;
            text-align: center;
            vertical-align: middle;
            border-radius: 5px;
        }

        tr:hover td {
            background-color: #dceffd;
            transition: background-color 0.2s ease;
        }

        .search-box {
            margin-top: 2rem;
            text-align: center;
        }

        .btn-pokedex {
            background-color: #1976d2;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 0.6rem 1.2rem;
            font-weight: 600;
            transition: all 0.2s ease;
        }

        .btn-pokedex:hover {
            background-color: #0d47a1;
            transform: scale(1.05);
        }

        .led-row {
            display: flex;
            justify-content: center;
            margin-bottom: 1rem;
        }
    </style>


</head>

<body>
    <div class="container">
        <div class="pokedex-frame">
            <div class="led-row">
                <div class="led red"></div>
                <div class="led yellow"></div>
                <div class="led green"></div>
            </div>

            <div class="screen">
                <h1>Trainer Pokedex</h1>

                <div class="search-box">
                    <h3>Search Pokemon</h3>
                    <form action="/searchPokemon" method="POST" class="d-flex justify-content-center">
                        <input type="text" name="name" class="form-control w-50 me-2" placeholder="Enter Pokemon name"
                            required>
                        <button type="submit" class="btn btn-pokedex">Search</button>
                    </form>
                </div>

                <br>

                <% if (error_message) { %>
                    <div class="alert alert-danger text-center">
                        <%= error_message %>
                    </div>
                    <% } %>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Base Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pokemonList.forEach(p=> { %>
                                        <tr>
                                            <td>
                                                <%= p.id %>
                                            </td>
                                            <td class="text-capitalize fw-bold">
                                                <%= p.description %>
                                            </td>
                                            <td>
                                                <%= p.base_total %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
            </div>
        </div>
    </div>
</body>


</html>